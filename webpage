document.addEventListener('DOMContentLoaded', function () {
    // Replace these placeholder texts with your own motivational content and quotes
    const motivations = ["Motivational content 1", "Motivational content 2", "Motivational content 3"];
    const quotes = ["Quote 1", "Quote 2", "Quote 3"];

    const motivationText = document.getElementById('motivation-text');
    const quoteText = document.getElementById('quote-text');
    const newMotivationBtn = document.getElementById('new-motivation-btn');

    // Display random motivation and quote on page load
    displayRandomContent();

    // Event listener for the "Get New Motivation" button
    newMotivationBtn.addEventListener('click', displayRandomContent);

    function displayRandomContent() {
        const randomMotivation = getRandomItem(motivations);
        const randomQuote = getRandomItem(quotes);

        motivationText.textContent = randomMotivation;
        quoteText.textContent = randomQuote;
    }

    function getRandomItem(array) {
        const randomIndex = Math.floor(Math.random() * array.length);
        return array[randomIndex];
    }
});
